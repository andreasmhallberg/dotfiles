@article{boussofaraomar_neither_2006,
	abstract = {The goal of this paper is to describe the nature of syntactic constraints on diglossie switching between the two varieties of Arabic in light of Myers-Scotton's Matrix Language Frame Model (1993a, [1997]). Although there has been interest in the nature of intermediate varieties of the Arabic language, i.e. those involving some mix of Classical Arabic ({CA}), Modern Standard Arabic ({MSA}), and national dialects, research on these varieties has generally been limited to describing the linguistic features of a third language or middle varieties. Absent, however, has been any effort to analyze the mix as switching between {CA}/{MSA} and the dialect or to relate issues of variation to theoretical models of switching. In this paper, I argue that what is called third language (or middle varieties) are in fact diglossie switching, and that there is no variety conventionalized as third language. Rather, what is being conventionalized are patterns of switching between two varieties with the dialect as the matrix variety into which constituents (i.e. content morphemes) from {CA}/{MSA} are embedded. The data examined in light of the {MLF} model demonstrate that the mix of the two varieties is governed by structural constraints and hence the switching patterns are systematic and predictable.},
	author = {Boussofara-Omar, Naima},
	date = {2006},
	date-modified = {2021-10-22 12:16:28 +0200},
	issn = {0170-026X},
